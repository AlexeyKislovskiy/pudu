<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

    <xacro:property name="steering_wheel_radius" value="0.05"/>
    <xacro:property name="steering_wheel_length" value="0.025"/>
    <xacro:property name="steering_wheel_mass" value="1.0"/>

    <xacro:macro name="steering_wheel" params="prefix parent *origin">

      <joint name="${prefix}_steering_wheel_joint" type="continuous">
            <parent link="${parent}"/>
            <child link="${prefix}_steering_wheel_link"/>
            <axis xyz="0 1 0"/>
            <dynamics damping="0.2"/>
            
            <xacro:insert_block name="origin"/>
        </joint>

        <link name="${prefix}_steering_wheel_link">
            <visual>
                <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
                <geometry>
                    <cylinder radius="${steering_wheel_radius}" length="${steering_wheel_length}"/>
                </geometry>
            </visual>
            <collision>
                <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
                <geometry>
                    <cylinder radius="${steering_wheel_radius}" length="${steering_wheel_length}"/>
                </geometry>
            </collision>
            <inertial>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <mass value="${steering_wheel_mass}"/>
                <inertia ixx="${(3*steering_wheel_radius**2+steering_wheel_length**2)*steering_wheel_mass*1/12}" ixy="0.0" ixz="0.0"
                        iyy="${(3*steering_wheel_radius**2+steering_wheel_length**2)*steering_wheel_mass*1/12}" iyz="0.0"
                        izz="${(steering_wheel_mass*steering_wheel_radius**2)*1/2}"/>
            </inertial> 
        </link>
    </xacro:macro>
</robot>
